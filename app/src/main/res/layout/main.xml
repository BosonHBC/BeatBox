<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="1">
    <LinearLayout android:orientation="vertical"
                  android:layout_width="1440px"
                  android:layout_height="1290px"
                  android:layout_gravity="center_vertical|center_horizontal"

                  android:weightSum="1">
        <VideoView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/open_v"
            />
    </LinearLayout>
    <LinearLayout android:orientation="vertical"
                  android:layout_width="1440px"
                  android:layout_height="300px"
                  android:layout_gravity="center_vertical|center_horizontal"
                  android:layout_weight="1.01">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="WELCOME TO BEATBOX"
            android:textAlignment="center"
            android:textSize="72px"
            android:layout_marginTop="130px"
            android:textColor="@color/colorTitle"
            android:textStyle="bold"
            android:ems="10"
            android:id="@+id/editText"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Produce by HUANG bocheng and ZHANG Yumo"
            android:textAlignment="center"
            android:textSize="48px"
            android:layout_marginTop="60px"
            android:ems="10"
            android:id="@+id/editText2"/>
    </LinearLayout>
<LinearLayout android:orientation="horizontal"
              android:layout_width="1400px"
              android:layout_height="400px"
              android:layout_gravity="center_horizontal|center_vertical">
    <Button
        android:text="Free Mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:layout_marginLeft="50px"
        android:layout_gravity="center_horizontal|center_vertical"
        android:id="@+id/free_btn"
        style="@style/Widget.AppCompat.Button"
        android:onClick="onFreeMode"/>

    <Button
        android:text="Play Mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:layout_marginRight="50px"
        android:layout_gravity="center_horizontal|center_vertical"
        android:id="@+id/play_btn"
        android:onClick="onPlayMode"/>
</LinearLayout>




</LinearLayout>